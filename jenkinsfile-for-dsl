pipeline {
  agent {
            docker {
                image 'node:7.4'
                args '-p 3000:3000'
            }
        }

  parameters {
    choice name: "REGION", choices: ["us-east-1"], description: "AWS Region"
  }

  environment {
    VAULT_AWS_PATH="IT/deployment_keys"
    STAGE="poc"
  }

  options {
    disableConcurrentBuilds()
    buildDiscarder(logRotator(numToKeepStr: "50", daysToKeepStr: "350"))
  }

  stages {
    stage("Check Required Settings") {
      steps {
        ansiColor("xterm") {
          sh "echo ${env.STAGE}"
        }
      }
      post {
        failure {
          script {
            sh "echo There was a failure. Boo."
          }
        }
      }
    }
    stage ("Deploy") {
      steps {
        ansiColor("xterm") {
          sh "npm i -g serverless --ignore-scripts spawn-sync"  // TODO: make as part of docker image
        }
      }
      post {
        failure {
          script {
            sh "echo There was deploy failure."
          }
        }
        success {
          script {
            sh "echo SUCCESS."
          }
        }
      }
    }
  }

}
