pipeline {
    agent any 
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello world!' 
                sh 'node -v'
            }
        }
        stage('npm-build') {
            agent {
                docker {
                    image 'node:7.4'
                }
            }
        
            steps {
                echo "Branch is ${env.BRANCH_NAME}..."
                sh 'node -v'
                sh 'node app.js'
        
                // withNPM(npmrcConfig:'my-custom-npmrc') {
                //     echo "Performing npm build..."
                //     sh 'npm install'
                // }
            }
        }
    }
}