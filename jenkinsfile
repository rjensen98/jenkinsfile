pipeline {
    agent any
    environment {
        ANOTHER = 'true'
    }
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello world!'
                echo "RJ_VAR - ${RJ_VAR}"
                echo "ANOTHER - ${ANOTHER}"
            }
        }
        stage('Sanity check') {
            steps {
                input "Does the previous environment look ok?"
            }
        }
        stage('Deploy - UAT') {
            steps {
                echo 'Deploying to UAT...'
            }
        }
        stage('Sanity check 2') {
            steps {
                input "Does the previous environment look ok?"
            }
        }
        stage('Deploy - Prod') {
            steps {
                echo 'Deploying to Prod...'
            }
        }
        // stage('npm-build') {
        //     agent {
        //         docker {
        //             image 'node:7.4'
        //         }
        //     }
        
        //     steps {
        //         echo "Branch is ${env.BRANCH_NAME}..."
